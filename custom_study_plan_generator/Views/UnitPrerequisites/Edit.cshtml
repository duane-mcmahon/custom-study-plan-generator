@model custom_study_plan_generator.Models.UnitPrerequisite

<h2>Edit Prerequisites</h2>

<div class="CRUDHeadingHolder">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>UnitPrerequisite</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.unit_code)

            @Html.HiddenFor(model => model.prereq_code)

            <div class="form-group">
                
                @Html.LabelFor(model => model.unit_code, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div>
                        @Html.EditorFor(model => model.unit_code)
                        @Html.ValidationMessageFor(model => model.unit_code, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                @Html.LabelFor(model => model.prereq_code, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div>
                        @Html.EditorFor(model => model.prereq_code)
                        @Html.ValidationMessageFor(model => model.prereq_code, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.LabelFor(model => model.mutiple_required, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.mutiple_required)
                        @Html.ValidationMessageFor(model => model.mutiple_required, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
