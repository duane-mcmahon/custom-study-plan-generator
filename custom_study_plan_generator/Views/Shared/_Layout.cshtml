@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Study Plan Generator</title>
    @Styles.Render("~/Content/Custom.css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Scripts", required: false)
    @Scripts.Render("~/Scripts/jquery-2.1.4.min.js")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="global">
                <div class="row">
                    <div class="large-6 columns">
                        <nav class="global-nav" role="navigation" aria-label="Global navigation">
                            <ul>            
                            
                                <li class="first">@Html.ActionLink("Home", "Index", "Home")<span class="icon arrow-down-light-grey"></span></li>
                                <li>@Html.ActionLink("View Drive", "driveAsync", "Home")</li>
                                <li>@Html.ActionLink("Upload to Drive", "submitPlan", "Home")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </nav>
                    </div>
                
                    </div><!-- /.row -->
            </div><!-- /.global -->
        </div>
    
    <header id="header" class="header">
        <div class="pageTitle">
            Custom Study Plan Generator
        </div>
    </header>
    @if (@User.Identity.IsAuthenticated)
    {
        <nav class="logoutForm">
            <span id="userName">@User.Identity.GetUserName()</span>
            <form method="post" action="../Account/LogOff">
                @Html.AntiForgeryToken()
                <button id="logoffButton" class="logoutButton" type="submit" value="Log Out" name="LogOff">LogOff </button>
            </form>
        </nav>
    }

    @RenderBody()
    <footer id="footer" class="footer">
        <div>&copy; @DateTime.Now.Year - Custom Study Plan Generator</div>
    </footer>
</body>

</html>
